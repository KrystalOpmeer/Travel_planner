<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Travel Itinerary</title>
</head>
<body>
    <h1>Your Personalized Travel Itinerary</h1>

    <% itinerary.forEach(day => { %>
        <h2>Day <%= day.day %></h2>
        <ul>
            <% day.activities.forEach(activity => { %>
                <li><%= activity.name %> - Rating: <%= activity.rating %> - Travel Time: <%= activity.travelTime %> </li>
            <% }) %>
        </ul>
    <% }) %>

    <h3>Flights:</h3>
    <ul>
        <% flights.forEach(flight => { %>
            <li><%= flight.name %> - Price: <%= flight.price %> </li>
        <% }) %>
    </ul>

    <h3>Accommodations:</h3>
    <ul>
        <% accommodations.forEach(accommodation => { %>
            <li><%= accommodation.name %> - Price: <%= accommodation.price %> </li>
        <% }) %>
    </ul>
</body>
</html>
